                                                    <h3></h3>
                                                    <div class="no-star">
                                                    @for (int i = 0; i < 10; i++)
                                                    {
                                                    if (i < mr.Vote)
                                                    {
                                                    <i class="ion-android-star"></i>
                                                    }
                                                    else
                                                    {
