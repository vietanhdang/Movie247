@{
    ViewData["Title"] = "Title";
}

<div class="page-single-2">
    <div class="container">
        <div class="row">
            <div class="middle-content">
                <a style="margin-top:120px"><img class="md-logo" src="" alt=""></a>
                <img src="" alt="" style="width:40%">
                <h1>@ViewBag.Message</h1>
                <h4 class="text-danger" style="color:red">@ViewBag.ErrorMessage</h4>
                <form method="post" action="/ExternalLogin/OnPostConfirmation">
                    <div class="text-danger"></div>
                    <div class="form-group" style="display: flex;align-items: center;">
                        <label for="email"></label>
                        <input name="email" style="padding: 10px 33px;margin: 0 20px;width: 300px ;font-family: 'Dosis', sans-serif;" placeholder="Enter your mail to Link account" />
                        <button type="submit" class="btn redbtn">Register</button>
                    </div>

                </form>
                <a href="/" class="redbtn" style="margin:20px">go home</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
        }